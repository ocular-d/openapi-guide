@require './code'
@require './arrow'
@require './element-tabs'
@require './container'

/* Custom Blocks and Admonitions */

.custom-block
  border-radius: 0.4rem
  color $textColor
  .custom-block-title
    font-weight 600
    margin-bottom -0.4rem
    font-family: $primaryFont, sans-serif
  &.tip
    background-color $boxBgColor
    border-color $tipGrey
  &.warning
    background-color $boxBgColor
    border-color $warningPink
    color $textColor
    .custom-block-title
      color $textColor
    a
      color $accentColor
  &.danger
    background-color $boxBgColor
    border-color $gazpacho
    color $textColor
    .custom-block-title
      color $textColor
    a
      color $ocean
  &.teaser
    margin auto
    display block
    text-align center
    font-weight lighter
    background-color $boxBgColor
    border-top-color $boxBgColor
    padding 0.8rem 1.6rem
    border-radius 4px
    transition background-color .1s ease
    //box-sizing border-box
    width auto
    img
      display block
      margin-left auto
      margin-right auto
    .custom-block-title
      border-bottom-width 0

/* end of Custom Blocks and Admonitions */

/* Navbar */
.navbar {
    position: fixed;
    z-index: 20;
    top: 0;
    left: 0;
    right: 0;
    height: 3.6rem;
    background-color: #fff;
    box-sizing: border-box;
    /* box-shadow: 0 2px 4px 0 rgba(0,0,0,.05)!important; */
}

div[class*="language-"] .highlight-lines .highlighted {
    background-color: #023A7C;
}


div[class*="language-"].line-numbers-mode .highlight-lines .highlighted:before {
  background-color: #023A7C;
}

div[class*="language-"].line-numbers-mode::after {
  border-right: 1px solid rgba(255,255,255,0.3);
}

/* Fonts */
body
  font-family $secondaryFont !important

h1, h2, h3, h4, h5, h6
  font-family: $primaryFont, sans-serif

h1, h2, h3
  font-weight: 400 !important

.nav-link, .repo-link , .nav-links .dropdown-title
  font-weight 600 !important

/* sidebar */
.sidebar {
    font-size: 16px;
    background-color: #fbfbfb;
    width: 20rem;
    position: fixed;
    z-index: 10;
    margin: 0;
    top: 3.6rem;
    left: 0;
    bottom: 0;
    box-sizing: border-box;
    border-right: 1px solid #eaecef;
    overflow-y: auto;
}

/* pint half */
.point,
.point-half
  width 32%
  display inline-block
  vertical-align top
  box-sizing border-box
  padding 0 2em
  text-align center
  h3
    color lighten($landoPink, 18%)
    // font-family "Poppins", "Helvetica Neue", Arial, sans-serif
    font-size 1.7em
    padding .66em 0.24em 0
    margin 0
    letter-spacing -2px
  p
    font-family "Source Sans Pro", "Helvetica Neue", Arial, sans-serif
    font-size 1.1em
    word-spacing 0.05em
    line-height 1.5
.point-half
  width 48%
  text-align left
  padding-left 0

.custom-block.third,
.custom-block.half
  width 32%
  display inline-block
  vertical-align top
  box-sizing border-box
.custom-block.half
  width 48%
.custom-block.center
  text-align center
  padding 3em